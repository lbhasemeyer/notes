{{outlet}}

{{message-queue}}

<section class="note-field">
    {{textarea placeholder="Add a title" class="title-field" value=titleCopy}}
    {{textarea placeholder="Add a note" value=noteCopy}}
</section>

<section class="add">
  <button {{action 'newNote'}}>Add Note</button>
  <h2>{{titleCopy}}</h2>
  {{noteCopy}}
</section>

<hr>

{{#each note in model}}
  <article class="view">
    <h2>{{note.title}}</h2>
    {{note.body}}
    <button {{action 'deleteNote' note.id}}>Delete Note</button>
  </article>
{{/each}}
